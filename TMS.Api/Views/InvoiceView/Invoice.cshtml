@model TMS.Api.Models.InvoiceViewModel

@{
    ViewBag.Title = "Index";
    var order = Model.Order;
    var InvHeader = Model.InvoiceHeader;
    var InvoiceDetail = Model.InvoiceDetail;
    var orderDtl = Model.OrderDtl;
}
<div id="Header" style="display:inline-block;border:solid;width:100%;float:none;">
    <div style="display:inline-block;width:100%">
        <h4 >
            <b>INVOICE </b>
        </h4>
        <hr>
    </div>
    <div id="Header" style="display:inline-block;width:100%;float:none;padding-top:10px;margin-top:10px">
        <div id="left" style="display:inline-block;float:left;">
            <h3>
                <b> JUNCTION COLLABORATIVE TRANSPORTS</b>
            </h3><br />
            <span>
                C/O ORANGE COMMERCIAL CREDIT
            </span><br />
            <span>
                P.O. BOX 11099
            </span><br />
            <span>
                OLYMPIA, WA  98508-1099
            </span><br />
            <span>
                REPORT CLAIMS TO: (800) 231-3878
            </span><br />
        </div>
        <div id="left" style="display:inline-block;float:right;">
            <table>
                <tr style="background-color:black;color:white;font-family:'Times New Roman'">

                    <th style="padding:10px">INVOICE NO</th>
                    <th style="padding:10px">INVOICE DATE</th>
                </tr>
                <tr>

                    <td style="padding:10px">@InvHeader.InvoiceNo</td>
                    <td style="padding:10px">@InvHeader.InvoiceDate.ToString("MM/dd/yyyy")</td>
                </tr>
            </table>
            <table style="width:100%">
                <tr style="font-family:'Times New Roman';font-weight:bold">
                    <td>
                        Due Date : @InvHeader.DueDate.ToString("MM/dd/yyyy")
                    </td>

                </tr>
            </table>
        </div>
    </div>

    <br />
    @*<div id="right" style="display:inline-block;width:45%;height:200px;float:right;">
            <h3>
                INVOICE
            </h3><br />
           <table>
               <tr style="background-color:black;color:white;font-family:'Times New Roman'">
